{
    "manifest_version": 2,
    "name": "Memento",
    "description": "This extension enables browsing past versions of a resource through a browser context menu.",
    "version": "0.1",

    "permissions": [
        "http://*/*",
        "<all_urls>",
        "contextMenus",
        "storage",
        "webRequest",
        "webNavigation",
        "webRequestBlocking"
    ],

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "background": {
        "scripts": [
            "menu.js",
            "jquery-ui/js/jquery-1.9.1.js"
        ]
    },

    /*
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"]
        }
    ],
    */

    "browser_action": {
        "default_icon": "memento.png",
        "default_title": "Memento",
        "default_popup": "popup.html"
    },
    
    "devtools_page": "devtools.html",
    
    "icons": {
        "16": "memento-16x16.png"
    }

}
